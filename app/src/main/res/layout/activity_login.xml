<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.view.LoginActivity"
     android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/login_img_logo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="48dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_bafafa" />

        <EditText
            android:id="@+id/login_edit_email"
            style="@style/Theme.Bafafa.FormEditText"
            android:autofillHints="@null"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/login_edit_password"
            style="@style/Theme.Bafafa.FormEditText"
            android:autofillHints="@null"
            android:hint="Senha"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/login_btn_enter"
            style="@style/Theme.Bafafa.Button"
            android:text="Entrar" />

        <FrameLayout
            style="@style/Theme.Bafafa.FormContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/gray_border" />

            <TextView
                style="@style/Theme.Bafafa.TextViewBase"
                android:layout_gravity="center"
                android:background="@color/white"
                android:padding="8dp"
                android:text="OU" />
        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_border"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        style="@style/Theme.Bafafa.TextViewBase"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="8dp"
        android:text="@string/login_txt_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
